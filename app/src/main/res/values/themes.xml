<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyHealth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/health_green</item>
        <item name="colorPrimaryVariant">@color/health_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SignText">
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="SignLabel">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:layout_marginStart">33dp</item>
        <item name="android:layout_marginEnd">33dp</item>
    </style>

    <style name="SheetText">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">34dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="CustomCardCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeTopRight">30dp</item>
    </style>

    <style name="home_tag_linear_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="home_tag_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="Theme.MyHealth.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="cardview_tab">
        <item name="cardShadowStartColor">#2235D6C4</item>
        <item name="cardShadowEndColor">#0333B5E5</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardLightDirection">none</item>
    </style>


    <style name="appointment_tab">
        <item name="cardShadowStartColor">#2235D6C4</item>
        <item name="cardShadowEndColor">#0333B5E5</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardLightDirection">none</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="Theme.MyHealth.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyHealth.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>