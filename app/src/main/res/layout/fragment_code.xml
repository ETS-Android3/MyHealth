<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CodeFragment">

    <LinearLayout
        android:id="@+id/wholePage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/health_green"
        android:orientation="vertical"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:fontFamily="@font/noto_sans_bold"
                android:text="MyCode"
                android:textAlignment="center"
                android:textColor="@color/dark_grey"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/rounded_corner_section"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:layout_marginEnd="5dp"
                    android:text="@string/updated_at"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/updateDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:text="2021-05-09 10:00:00"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/noto_sans"
                android:text="@string/unknown"
                android:textAlignment="center"
                android:textSize="34sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/codeImage"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/qrcode_not_available">

                <TextView
                    android:id="@+id/no_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/qr_code_not_available"
                    android:textAlignment="center"
                    android:textColor="@color/health_green"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/do_assessment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/please_do_self_assessment_first"
                    android:textAlignment="center"
                    android:textColor="@color/health_green"
                    android:textSize="14sp" />
            </LinearLayout>


            <Button
                android:id="@+id/updateCode_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_rounded_corner"
                android:fontFamily="@font/noto_sans"
                android:text="@string/refresh"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/assessment_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_rounded_corner"
                android:fontFamily="@font/montserrat"
                android:text="@string/self_assessment"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>