<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/home_tag_linear_layout"
    >
    <com.meetsl.scardview.SCardView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/appointment_tab">
        <LinearLayout
            android:id="@+id/mc"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/mcImage"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:src="@color/light_grey"
                android:scaleType="centerCrop"
                android:background="@color/light_grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mcName"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="Name"
                    android:textColor="@color/dark_grey"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mcAddress"
                    android:layout_width="200dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="Address" />

                <TextView
                    android:id="@+id/mcDistance"
                    android:layout_width="220dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="Distance" />
            </LinearLayout>
        </LinearLayout>

    </com.meetsl.scardview.SCardView>

</LinearLayout>
